    "item": [
        {
            "name": "Submissions for Review",
            "item": [
                {
                    "name": "Get Submissions for Review by Lesson",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/submissions/lesson/{{lessonId}}/for-review?limit=50",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "submissions",
                                "lesson",
                                "{{lessonId}}",
                                "for-review"
                            ],
                            "query": [
                                {
                                    "key": "limit",
                                    "value": "50",
                                    "description": "Maximum number of submissions to return"
                                }
                            ]
                        },
                        "description": "Get submissions available for code review for a specific lesson"
                    }
                },
                {
                    "name": "Get Submission for Review",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{accessToken}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/submissions/{{submissionId}}/for-review",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "submissions",
                                "{{submissionId}}",
                                "for-review"
                            ]
                        },
                        "description": "Get a specific submission for code review"
                    }
                }
            ],
            "description": "Endpoints for getting submissions available for review"
        },
