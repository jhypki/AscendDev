{
    "info": {
        "_postman_id": "code-reviews-collection-id",
        "name": "07 - Code Reviews",
        "description": "API endpoints for code review functionality including submissions for review and code review management",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
