# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ascenddev
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_CONTAINER_NAME=ascenddev-postgres

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USER=default
REDIS_PASSWORD=redis
REDIS_CONTAINER_NAME=ascenddev-redis

# API Configuration
API_PORT=5171
API_CONTAINER_NAME=ascenddev-api
API_IMAGE=ascenddev-api:latest
ASPNETCORE_URLS=http://+:5171
ASPNETCORE_ENVIRONMENT=Development

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_CONTAINER_NAME=ascenddev-frontend
VITE_API_URL=http://localhost:5171/api

# CORS Configuration
# For local development, use localhost origins
# For production, replace with your actual domain(s)
# Example for production: CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000,http://localhost:5173,https://localhost:5173

# JWT Settings
JwtSettings__Key=your-256-bit-secret-key-here-for-development-only
JwtSettings__Issuer=ascenddev
JwtSettings__Audience=ascenddev-users
JwtSettings__AccessTokenExpiryMinutes=60
JwtSettings__RefreshTokenExpiryDays=7

# Docker Configuration
DOCKER_HOST=unix:///var/run/docker.sock

# New Relic Configuration (Optional)
NEW_RELIC_LICENSE_KEY=
NEW_RELIC_APP_NAME=AscendDev

# Container Names
UPLOAD_CONFIG_CONTAINER_NAME=upload-config-files