{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=ascenddev;Username=postgres;Password=postgres",
    "RedisConnection": "localhost:6379"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-jwt-key-that-should-be-at-least-32-characters-long",
    "Issuer": "AscendDev",
    "Audience": "AscendDev-Users",
    "ExpirationInMinutes": 60,
    "RefreshTokenExpirationInDays": 7
  },
  "OAuth": {
    "GitHub": {
      "ClientId": "your-github-client-id",
      "ClientSecret": "your-github-client-secret",
      "RedirectUri": "http://localhost:3000/auth/callback/github",
      "Scope": "user:email"
    },
    "Google": {
      "ClientId": "your-google-client-id",
      "ClientSecret": "your-google-client-secret",
      "RedirectUri": "http://localhost:3000/auth/callback/google",
      "Scope": "openid profile email"
    }
  },
  "Email": {
    "SmtpHost": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "your-email@gmail.com",
    "SmtpPassword": "your-app-password",
    "FromEmail": "noreply@ascenddev.com",
    "FromName": "AscendDev Platform"
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "AccountLockoutDurationMinutes": 30,
    "EmailVerificationTokenExpirationHours": 24,
    "PasswordResetTokenExpirationHours": 2,
    "RequireEmailVerification": true
  },
  "Features": {
    "EnableOAuth": true,
    "EnableEmailNotifications": true,
    "EnableAchievements": true,
    "EnableDiscussions": true,
    "EnableCodeReviews": true,
    "EnableRealTimeNotifications": true
  },
  "RateLimiting": {
    "LoginAttempts": {
      "PermitLimit": 5,
      "WindowMinutes": 15
    },
    "ApiCalls": {
      "PermitLimit": 100,
      "WindowMinutes": 1
    },
    "EmailSending": {
      "PermitLimit": 10,
      "WindowMinutes": 60
    }
  },
  "Caching": {
    "DefaultExpirationMinutes": 30,
    "UserProfileExpirationMinutes": 60,
    "CourseDataExpirationMinutes": 120,
    "AchievementsExpirationMinutes": 240
  }
}