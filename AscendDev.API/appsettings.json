{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "AccountLockoutDurationMinutes": 30,
    "EmailVerificationTokenExpirationHours": 24,
    "PasswordResetTokenExpirationHours": 2,
    "RequireEmailVerification": true
  },
  "Features": {
    "EnableOAuth": true,
    "EnableEmailNotifications": true,
    "EnableAchievements": true,
    "EnableDiscussions": true,
    "EnableCodeReviews": true,
    "EnableRealTimeNotifications": true
  },
  "RateLimiting": {
    "LoginAttempts": {
      "PermitLimit": 5,
      "WindowMinutes": 15
    },
    "ApiCalls": {
      "PermitLimit": 100,
      "WindowMinutes": 1
    },
    "EmailSending": {
      "PermitLimit": 10,
      "WindowMinutes": 60
    }
  },
  "Caching": {
    "DefaultExpirationMinutes": 30,
    "UserProfileExpirationMinutes": 60,
    "CourseDataExpirationMinutes": 120,
    "AchievementsExpirationMinutes": 240
  }
}